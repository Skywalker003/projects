{
    "manifest_version": 3,
    "name": "Ai Summarizer",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "permissions" :[
        "scripting","activeTab","storage"
    ],

    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    },

    "option_page": "options.html",

    "host_permissions": ["<all_urls>"]
}